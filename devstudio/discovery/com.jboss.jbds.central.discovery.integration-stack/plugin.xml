<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">

    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="JBoss Developer Studio Integration Stack Tools for use with individual JBoss projects (or products)."
       id="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       name="JBoss Developer Studio Integration Stack"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-bpr" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-ds" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-fuse" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-soa" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-soa-legacy" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.extras-bpel-examples" /> 
    </connectorCategory>

    <!-- JBoss Business Process and Rules Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-bpr"
       certificationId="com.jboss.jbds.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Business Process and Rules Development"
       description="Available in Red Hat JBoss Developer Studio 8.x. Coming soon to 9.0 - stay tuned. Tools related to business processes and rules development - includes support for BPEL, BPMN2, jBPM, Drools and Guvnor."
       id="jboss.integration-stack.bundle.bpr">
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Data Virtualization Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-ds"
       certificationId="com.jboss.jbds.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Data Virtualization Development"
       description="Available in Red Hat JBoss Developer Studio 8.x. Coming soon to 9.0 - stay tuned. Tools related to data virtualization such as persistence and transformation - includes support for JCR CND Editor, Teiid Designer and Modeshape."
       id="jboss.integration-stack.bundle.ds">
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

	<!-- JBoss Fuse Development -->
	<connectorDescriptor
	  categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
	  groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-fuse"
	  certificationId="com.jboss.jbds.discovery.certification.notavailable"
	  kind="task"
	  license="Free, EPL"
	  provider="JBoss by Red Hat"
	  siteUrl="${jboss.discovery.site.integration-stack.url}"
	  name="JBoss Fuse Development"
	  description="Available in Red Hat JBoss Developer Studio 8.x. Coming soon to 9.0 - stay tuned. Tools related to integrating software components that work with Apache ServiceMix, ActiveMQ and Camel - support for Fuse."
	  id="jboss.integration-stack.bundle.fuse">
	 <icon
	    image32="images/jbds_icon32.png">
	 </icon>
	 <overview
	    url="http://tools.jboss.org/features/apachecamel.html">
	 </overview>
	</connectorDescriptor>

    <!-- JBoss Integration and SOA Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-soa"
       certificationId="com.jboss.jbds.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Integration and SOA Development"
       description="Available in Red Hat JBoss Developer Studio 8.x. Coming soon to 9.0 - stay tuned. Tools related to the development of Integration and SOA applications - includes support for BPMN2 and jBPM."
       id="jboss.integration-stack.bundle.soa">
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss SOA Legacy Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-soa-legacy"
       certificationId="com.jboss.jbds.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss SOA 5.x Development"
       description="Available in Red Hat JBoss Developer Studio 8.x. Coming soon to 9.0 - stay tuned. SOA Tools related to version 5.x of the integration stack - BPEL, Drools, ESB and jBPM 3."
       id="com.jboss.jbds.soatooling.bundle.soap">

      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>
  </extension>

</plugin>
