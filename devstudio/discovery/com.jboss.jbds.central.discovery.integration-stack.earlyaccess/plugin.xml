<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">
    
    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="Early Access JBoss Developer Studio Integration Stack Tools for use with individual JBoss projects (or products)."
       id="com.jboss.jbds.central.discovery.integration-stack.ea.bundle" 
       name="JBoss Developer Studio Integration Stack Early Access"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-fuse" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-bpr" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.ea.extras-bpel-examples" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-ds" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-soa" /> 
    </connectorCategory>

    <!-- JBoss Business Process and Rules Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-bpr"
       certificationId="com.jboss.jbds.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.earlyaccess.site.integration-stack.url}"
       name="JBoss Business Process and Rules Development"
       description="Tools related to business processes and rules development support for BPEL, BPMN2, Drools, jBPM6 and KIE."
       id="jboss.integration-stack.bundle.bpr">
      <iu id="org.jboss.tools.bpel.feature"/>
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Integration and SOA Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-soa"
       certificationId="com.jboss.jbds.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.earlyaccess.site.integration-stack.url}"
       name="JBoss Integration and SOA Development"
       description="Tools related to the development of Integration and SOA applications - includes support for BPEL, BPMN2, Drools, jBPM6 and KIE."
       id="jboss.integration-stack.bundle.soa">
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>

      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Data Virtualization Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-ds"
       certificationId="com.jboss.jbds.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.earlyaccess.site.integration-stack.url}"
       name="JBoss Data Virtualization Development"
       description="Tools related to data virtualization such as persistence and transformation - includes support for JCR CND Editor, Teiid Designer and Modeshape."
       id="jboss.integration-stack.bundle.ds">
      <iu id="org.jboss.tools.modeshape.rest.feature"/>
      <iu id="org.jboss.tools.modeshape.jcr.feature"/>
      <iu id="org.teiid.datatools.connectivity.feature"/>
      <iu id="org.teiid.designer.feature"/>
      <iu id="org.teiid.designer.runtime.feature"/>
      <iu id="org.teiid.designer.teiid.client.feature"/>
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Fuse Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle-fuse"
       certificationId="com.jboss.jbds.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.earlyaccess.site.integration-stack.url}"
       name="JBoss Fuse Development"
       description="Tools related to integrating software components that work with Apache ServiceMix, ActiveMQ and Camel - support for Fuse, SwitchYard."
       id="jboss.integration-stack.bundle.fuse">
       <iu id="org.eclipse.bpmn2.feature"/>
       <iu id="org.eclipse.bpmn2.modeler"/>
       <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
       <iu id="org.fusesource.ide.camel.editor.feature"/>
       <iu id="org.fusesource.ide.core.feature"/>
       <iu id="org.fusesource.ide.jmx.feature"/>
       <iu id="org.fusesource.ide.server.extensions.feature"/>
       <iu id="org.jboss.tools.fuse.transformation.feature"/>
       <iu id="org.switchyard.tools.feature"/>
       <iu id="org.switchyard.tools.bpel.feature"/>
       <iu id="org.switchyard.tools.bpmn2.feature"/>
       <icon
          image32="images/jbds_icon32.png">
       </icon>
       <overview
          url="http://tools.jboss.org/features/apachecamel.html">
       </overview>
    </connectorDescriptor>

  </extension>	

  <extension point="org.jboss.tools.central.proxyWizard">
    <proxyWizard
       id="fuse.integration.wizard"
       category="earlyaccess"
       description="%fuse.integration.wizard.description"
       label="Fuse Integration Project"
       priority="3"
       iconPath="images/fuse_integration_wizard.png"
       wizardId="org.fusesource.ide.branding.wizards.FuseProjectWizard"
       requiredComponentIds="jboss.integration-stack.bundle.fuse">
    </proxyWizard>
  </extension>	

</plugin>
