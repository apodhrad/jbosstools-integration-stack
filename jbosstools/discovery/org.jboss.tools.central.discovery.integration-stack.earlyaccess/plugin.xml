<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">

    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="Early Access JBoss Integration Stack Tools for use with individual JBoss projects (or products)"
       id="com.jboss.jbds.central.discovery.integration-stack.ea.bundle" 
       name="JBoss Tools Integration Stack Early Access"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-fuse" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.prod" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.brms" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.dv" /> 
    </connectorCategory>

    <!-- JBoss Business Process and Rules Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.prod"
       certificationId="org.jboss.tools.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Business Process and Rules Development"
       description="Tools related to business processes and rules development - includes support for BPEL, BPMN2, jBPM, Drools and Guvnor."
       id="jboss.integration-stack.bundle.bpr">
      <iu id="org.jboss.tools.bpel.feature"/>
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.guvnor.tools.feature"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Data Virtualization Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.prod"
       certificationId="org.jboss.tools.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Data Virtualization Development"
       description="Tools related to data virtualization such as persistence and transformation - includes support for JCR CND Editor, Teiid Designer and Modeshape."
       id="jboss.integration-stack.bundle.ds">
      <iu id="org.jboss.tools.modeshape.rest.feature"/>
      <iu id="org.jboss.tools.modeshape.jcr.feature"/>
      <iu id="org.teiid.datatools.connectivity.feature"/>
      <iu id="org.teiid.designer.feature"/>
      <iu id="org.teiid.designer.runtime.feature"/>
      <iu id="org.teiid.designer.teiid.client.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Fuse Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-fuse"
       certificationId="org.jboss.tools.discovery.certification.supported.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Fuse Development"
       description="Tools related to integrating and developing software components that work with Apache ServiceMix, ActiveMQ and Camel - support for Fuse."
       id="jboss.integration-stack.bundle.fuse">
      <iu id="org.fusesource.ide.camel.editor.feature"/>
      <iu id="org.fusesource.ide.core.feature"/>
      <iu id="org.fusesource.ide.jmx.feature"/>
      <iu id="org.fusesource.ide.server.extensions.feature"/>
      <iu id="org.jboss.tools.fuse.transformation.feature"/>
      <icon
	  image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Integration and SOA Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.prod"
       certificationId="org.jboss.tools.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Integration and SOA Development"
       description="Tools related to the development of Integration and SOA applications."
       id="jboss.integration-stack.bundle.soa">
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.jbpm.eclipse.feature"/>

      <iu id="org.fusesource.ide.camel.editor.feature"/>
      <iu id="org.fusesource.ide.core.feature"/>
      <iu id="org.fusesource.ide.jmx.feature"/>
      <iu id="org.fusesource.ide.server.extensions.feature"/>
      <iu id="org.jboss.tools.fuse.transformation.feature"/>
      <iu id="org.jboss.tools.fuse.transformation.feature"/>
      <iu id="org.switchyard.tools.feature"/>
      <iu id="org.switchyard.tools.bpel.feature"/>
      <iu id="org.switchyard.tools.bpmn2.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor>

    <!-- JBT single component sites -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.brms"
       certificationId="org.jboss.tools.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Business Process Modeling"
       description="A graphical modeling tool which allows creation and editing of Business Process Modeling Notation diagrams "
       id="org.eclipse.bpmn2.feature">
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.brms"
       certificationId="org.jboss.tools.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss jBPM Tools"
       description="JBoss Tools for jBPM, Runtime Detection"
       id="org.jboss.jbpm.eclipse.feature">
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <icon
	 image32="images/jbds_jbpm_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.dv"
       certificationId="org.jboss.tools.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss ModeShape Tooling"
       description="Resource (un)publishing to ModeShape repositories"
       id="org.jboss.tools.modeshape.rest.feature">
      <iu id="org.jboss.tools.modeshape.rest.feature"/>
      <iu id="org.jboss.tools.modeshape.jcr.feature"/>
      <icon
	 image32="images/jbds_modeshape_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.ea.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.dv"
       certificationId="org.jboss.tools.discovery.certification.supported.earlyaccess"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Teiid Designer"
       description="Create metadata models + VDBs"
       id="org.teiid.designer.feature">
      <iu id="org.teiid.datatools.connectivity.feature"/>
      <iu id="org.teiid.designer.feature"/>
      <iu id="org.teiid.designer.runtime.feature"/>
      <iu id="org.teiid.designer.teiid.client.feature"/>
      <icon
	 image32="images/jbds_tdesigner_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

  </extension>
</plugin>
