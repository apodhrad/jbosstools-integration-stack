<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">

    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="JBoss Integration Stack Tools for use with individual JBoss projects (or products)"
       id="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       name="JBoss Tools Integration Stack"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.soatooling.emt" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle.brms" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle.generic" /> 
    </connectorCategory>

    <!-- JBoss Integration Stack Generic Connector -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.generic"
       certificationId="org.jboss.tools.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Tools Integration Stack Early Access Components"
       description="Fuse Tooling, Data Virtualization, BRMS and SOA Tooling plugins are available by selecting 'Enable Early Access'.  Also available in JBoss Tools 4.2.x."
       id="jboss.integration-stack.ea.bundle.fuse">  <!-- get the generic message to go away when Fuse Tooling is installed -->
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.soatooling.emt"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss ESB Tools"
       description="JBoss ESB Tools, Runtime Detection"
       id="org.jboss.tools.esb.feature">
      <iu id="org.jboss.tools.esb.feature"/>
      <iu id="org.jboss.tools.runtime.esb.detector.feature"/>
      <icon
	 image32="images/jbds_esb_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.brms"
       certificationId="org.jboss.tools.discovery.certification.supported"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Tools Runtime Detection"
       description="JBoss Tools Runtime Detection for jBPM, Drools and ESB"
       id="org.jboss.runtime.drools.detector.feature">
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <iu id="org.jboss.tools.runtime.esb.detector.feature"/>
      <icon
	 image32="images/jbds_jbpm_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

  </extension>
</plugin>
