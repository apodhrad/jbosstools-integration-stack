<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">

    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="JBoss Integration Stack Tools for use with individual JBoss projects (or products)"
       id="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       name="JBoss Tools Integration Stack"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-fuse" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.prod" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.brms" /> 
      <group id="com.jboss.jbds.central.discovery.soatooling.emt" /> 
    </connectorCategory>

       <!-- JBoss Fuse Development -->
       <connectorDescriptor
          categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
          groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-fuse"
          certificationId="org.jboss.tools.discovery.certification.notavailable"
          kind="task"
          license="Free, EPL"
          provider="JBoss by Red Hat"
          siteUrl="${jboss.discovery.site.integration-stack.url}"
          name="JBoss Fuse Development"
          description="Available in JBoss Tools 4.2.x. Coming soon to 4.3 - stay tuned. Tools related to integrating and developing software components that work with Apache ServiceMix, ActiveMQ and Camel - support for Fuse."
          id="jboss.integration-stack.bundle.fuse">
         <icon
        image32="images/jbosstools_icon32.png">
         </icon>
         <overview
       url="http://devstudio.redhat.com/">
         </overview>
       </connectorDescriptor>
      
    <!-- JBoss Integration and SOA Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.prod"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Integration and SOA Development"
       description="Tools related to the development of Integration and SOA applications."
       id="jboss.integration-stack.bundle.soa">
      <iu id="org.jboss.tools.bpel.feature"/>
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.guvnor.tools.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor>

    <!-- JBT single component sites -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss BPEL"
       description="JBoss Business Logic - Orchestrating your business processes"
       id="org.jboss.tools.bpel.feature">
      <iu id="org.jboss.tools.bpel.feature"/>
      <icon
	 image32="images/jbds_bpel_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Drools"
       description="JBoss Drools Core, Task Management, Runtime Detection"
       id="org.drools.eclipse.feature">
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <icon
	 image32="images/jbds_drools_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.soatooling.emt"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss ESB Tools"
       description="JBoss ESB Tools, Runtime Detection"
       id="org.jboss.tools.esb.feature">
      <iu id="org.jboss.tools.esb.feature"/>
      <iu id="org.jboss.tools.runtime.esb.detector.feature"/>
      <icon
	 image32="images/jbds_esb_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Guvnor"
       description="JBoss governance tools"
       id="org.guvnor.tools.feature">
      <iu id="org.guvnor.tools.feature"/>
      <icon
	 image32="images/jbds_guvnor_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Runtime Detection for Drools, ESB, jBPM"
       description="Runtime Detection for Drools, ESB, jBPM"
       id="org.jboss.tools.runtime.drools.detector.feature">
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <iu id="org.jboss.tools.runtime.esb.detector.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>
  </extension>

</plugin>
