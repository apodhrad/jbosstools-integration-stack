<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">

    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="JBoss Integration Stack Tools for use with individual JBoss projects (or products)"
       id="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       name="JBoss Tools Integration Stack"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.soatooling.emt" /> 
      <group id="com.jboss.jbds.central.discovery.soatooling.r" /> 
    </connectorCategory>
      
    <!-- JBT single component sites -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.soatooling.bdgj"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Drools"
       description="JBoss Drools Core, Task Management, Runtime Detection"
       id="org.drools.eclipse.feature">
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <icon
	 image32="images/jbds_drools_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.soatooling.emt"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss ESB Tools"
       description="JBoss ESB Tools, Runtime Detection"
       id="org.jboss.tools.esb.feature">
      <iu id="org.jboss.tools.esb.feature"/>
      <iu id="org.jboss.tools.runtime.esb.detector.feature"/>
      <icon
	 image32="images/jbds_esb_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.soatooling.r"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Runtime Detection for Drools, ESB, jBPM"
       description="Runtime Detection for Drools, ESB, jBPM"
       id="org.jboss.tools.runtime.drools.detector.feature">
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <iu id="org.jboss.tools.runtime.esb.detector.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>
  </extension>

</plugin>
